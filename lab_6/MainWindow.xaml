<Window x:Class="lab_6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_6"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Labels and Inputs -->
        <TextBlock Text="Full Name:" Style="{StaticResource LabelStyle}" Grid.Row="0" Grid.Column="0"/>
        <TextBox Style="{StaticResource TextBoxStyle}" Grid.Row="0" Grid.Column="1"/>

        <TextBlock Text="Email:" Style="{StaticResource LabelStyle}" Grid.Row="1" Grid.Column="0"/>
        <TextBox Style="{StaticResource TextBoxStyle}" Grid.Row="1" Grid.Column="1"/>

        <TextBlock Text="Username:" Style="{StaticResource LabelStyle}" Grid.Row="2" Grid.Column="0"/>
        <TextBox Style="{StaticResource TextBoxStyle}" Grid.Row="2" Grid.Column="1"/>

        <TextBlock Text="Password:" Style="{StaticResource LabelStyle}" Grid.Row="3" Grid.Column="0"/>
        <PasswordBox Width="200" Padding="5" Margin="5" BorderBrush="Gray" BorderThickness="1" Grid.Row="3" Grid.Column="1"/>

        <TextBlock Text="Confirm Password:" Style="{StaticResource LabelStyle}" Grid.Row="4" Grid.Column="0"/>
        <PasswordBox Width="200" Padding="5" Margin="5" BorderBrush="Gray" BorderThickness="1" Grid.Row="4" Grid.Column="1"/>

        <!-- Register Button -->
        <Button Content="Register" Style="{StaticResource ButtonStyle}" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Right"/>
    </Grid>
</Window>
