<Window x:Class="assignment_4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:assignment_4"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Margin="10">
         <TextBox x:Name="CityTextBox" Width="300" Margin="0 0 0 10" Padding="8"
             Text="Enter city name..." Foreground="Gray"
             GotFocus="CityTextBox_GotFocus" LostFocus="CityTextBox_LostFocus"/>
        <Button Content="Clear" Padding="8 4" Width="100" Margin="0 10 0 10" Click="ClearButton_Click" />

        <Button Content="Search" Width="100"  Padding="8 4" Click="SearchButton_Click" />
        <DataGrid x:Name="StudentsDataGrid" Margin="0 10 0 0" AutoGenerateColumns="True" />
    </StackPanel>
</Window>
