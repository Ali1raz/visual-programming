<Window x:Class="lab_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Username:" />
            <TextBox Name="txtUsername" />

            <TextBlock Text="Password:" />
            <PasswordBox Name="txtPassword" />

            <TextBlock Text="Role:" />
            <ListBox Name="lstRole" Height="50">
                <ListBoxItem Content="Admin" />
                <ListBoxItem Content="User" />
                <ListBoxItem Content="Guest" />
            </ListBox>

            <TextBlock Text="Degree Applying For:" />
            <ListBox Name="lstDegree" Height="50">
                <ListBoxItem Content="Bachelors" />
                <ListBoxItem Content="Masters" />
                <ListBoxItem Content="PhD" />
            </ListBox>

            <Button Content="Submit" Click="Submit_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
