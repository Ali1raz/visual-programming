@model StudentRecords.Models.Student

@{
    ViewData["Title"] = "Student Details";
}

<h2>Student Details</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="student-details">
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-2">Roll Number</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.RollNumber)</dd>

        <dt class="col-sm-2">GPA</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.GPA)</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">
            @{
                var status = Model.GPA >= 2.0 ? "Good Standing" : "Academic Probation";
                var statusClass = Model.GPA >= 2.0 ? "text-success" : "text-danger";
            }
            <span class="@statusClass">@status</span>
        </dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
        <i class="bi bi-pencil"></i> Edit
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function () {
            $('.alert').alert('close');
        }, 5000);
    </script>
}
