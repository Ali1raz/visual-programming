@model MvcMovie.Models.Movie

@{
    ViewData["Title"] = "Movie Details";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Movie Details</h2>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>@Html.DisplayNameFor(model => model.Title)</strong>
                        </div>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.Title)
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>@Html.DisplayNameFor(model => model.Genre)</strong>
                        </div>
                        <div class="col-sm-9">
                            @Html.DisplayFor(model => model.Genre)
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <strong>@Html.DisplayNameFor(model => model.ReleaseDate)</strong>
                        </div>
                        <div class="col-sm-9">
                            @Model.ReleaseDate.ToString("MMMM dd, yyyy")
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-sm-3">
                            <strong>@Html.DisplayNameFor(model => model.Price)</strong>
                        </div>
                        <div class="col-sm-9">
                            @Model.Price.ToString("C")
                        </div>
                    </div>

                    <div class="text-center">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
